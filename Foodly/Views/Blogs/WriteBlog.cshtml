@{
    ViewData["Title"] = "Blog yaz";
}
@model Review
    <link rel="stylesheet" href="/richtexteditor/rte_theme_default.css" />
    <script type="text/javascript" src="/richtexteditor/rte.js"></script>
    <script type="text/javascript" src='/richtexteditor/plugins/all_plugins.js'></script>
    <section class="hero-wrap hero-wrap-2" style="background-image: url(/images/bg_3.jpg);" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-end justify-content-center">
                <div class="col-md-9 ftco-animate text-center mb-4">
                    <h1 class="mb-2 bread">Fikirlerini Belirt</h1>

                </div>
            </div>
        </div>
    </section>


    <section>
        <form method="post">
            <div style="margin-left:20px; margin-top:30px;">
                <span>Başlık</span><br />
                @Html.TextBoxFor(x => x.Header)<br />
                <span>Yıldız</span><br />
                @Html.TextBoxFor(x => x.Star)<br />
                <span>Yer ismi</span><br />
                @Html.TextBoxFor(x => x.RestaurantName)<br />
                <span>Fiyat</span><br />
                @Html.TextBoxFor(x => x.Price)<br />
                <span>Yorumunuz</span>
                @Html.TextAreaFor(x => x.Blog, new { id = "div_editor1" })
            </div><br />
            <button class="submit btn btn-dark" style="width=100%">Kaydet</button>
            <!-- Create a new DIV element with all of the content that we want inside the Editor -->


        </form>
    </section>
    <script>
        var editor1cfg = {}
        editor1cfg.toolbar = "basic";
        var editor1 = new RichTextEditor("#div_editor1", editor1cfg);
    </script>